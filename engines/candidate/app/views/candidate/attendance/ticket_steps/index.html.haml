#header
  .columns
    .column.text-center
      %p.subtitle.is-5 Atendimento
#content
  .container
    .columns
      .column
        = link_to "Voltar para atendimento".html_safe, candidate.attendance_tickets_path, class: 'button is-dark is-fullwidth', data: { disable_with: t(:disable_with)}
    .columns
      .column.text-center
        %p.title.is-5 Protocolo 1
    .columns
      .column.text-center
        %p.title.is-6 Etapas
    .columns
      - @ticket.category.category_steps.order(:screen_order).each do |step|
        = link_to attendance_ticket_step_path(@ticket, step) do
          .column
            .box
              = step.name
    .columns
      .column
        = link_to "Finalizar atendimento", "#", class: 'button is-fullwidth is-success'        